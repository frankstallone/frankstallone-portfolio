---
import { Variant, VARIANT_MAPS } from '../../utils/variants.ts'
const { variant = "default" } = Astro.props;

export interface Props {
    variant?: Variant;
}

const year = new Date().getFullYear();
---

<footer class={`flex flex-col text-center mx-4 pb-4 ${VARIANT_MAPS[variant].primary}`}>
  &copy; {year} Frank Stallone III
  <small class={`block ${VARIANT_MAPS[variant].primary}`}>
    ⚠️ Portfolio in perpetual beta. 🚀 Happily built by Astro, also in beta. 🧗🏼 Living on the edge of the web since 1998.
  </small>
</footer>