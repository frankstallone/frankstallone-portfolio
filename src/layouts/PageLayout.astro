---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
  desc: string;
}

const { title = "default", desc = "default" } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} desc={desc} />
  </head>
  <body>
    <div class="wrapper top-pad">
      <Header />
    </div>
    <article class="wrapper flow region prose" role="main" id="main-content">
      <slot />
    </article>
  </body>
</html>
