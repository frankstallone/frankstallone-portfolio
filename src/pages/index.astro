---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.astro';
import Header from '../components/Header/index.astro';
import { Variant, VARIANT_MAPS } from '../utils/variants.ts'
const { variant = "default" } = Astro.props;

export interface Props {
    variant: Variant;
}
const metaThemeColor = `${VARIANT_MAPS[variant].themeColor}`;
---
<html lang="en" class="overflow-x-hidden">
  <head>
    <MainHead title="Frank Stallone Portfolio" />
    <meta name="theme-color" content={metaThemeColor}>
  </head>
  <body class="min-h-screen overflow-x-hidden relative">
  <Header />
  <figure class="grid gap-4 p-4 place-items-center  lg:grid-cols-4">
  <div class="text-indigo-indigo12 font-black tracking-wider rotate-90 break-words hidden lg:block lg:text-4xl lg:leading-5 xl:text-5xl xl:leading-6">TECHNOLOGY MINDFULNESS CREATING</div>
    <img src="/assets/me.jpg" class="xs:square lg:col-start-2" alt="Photograph of me, Frank Stallone III">
    <figcaption class="lg:col-span-2 h-full flex place-items-center">
      <h2 class="text-amber-amber12 sm:leading-snug p-8 text-xl md:text-4xl xl:text-5xl">üëãüèº Hiya! I love <span class="tracking-wider font-black text-red-red11">TECHNOLOGY</span>, <span class="tracking-wider font-black text-red-red11">MINDFULNESS</span>, <span class="italic mr-2">and</span> <span class="tracking-wider font-black text-red-red11">CREATING</span> compelling user experiences.</h2>
    </figcaption>
  </figure>
  <h2 class="sr-only">Featured work</h2>
  <main class="grid gap-4 px-4 place-items-center xs:grid-cols-2 lg:grid-cols-4 pb-4">
    <a href="/btc" class="xs:square"><img src="/assets/squared/btc-squared-01@2x.png" alt="Photo of initial sketches of the chosen logo for Builders Trust Capital showing the intentions for the three pilars"></a>
    <a href="/btc" class="xs:square"><img src="/assets/squared/btc-squared-02@2x.png" alt="Screenshot of the home page design for Builders Trust Capital"></a>
    <a href="/btc" class="xs:square"><img src="/assets/squared/btc-squared-03@2x.png" alt="Screenshot of the presentation for the new Builders Trust Capital logo in context on a sign and business cards"></a>
    <a href="/btc" class="xs:square"><img src="/assets/squared/btc-squared-04@2x.png" alt="Logo presentation of the Builders Trust Capital mark and logo type"></a>
  </main>
  <main class="grid gap-4 px-4 place-items-center xs:grid-cols-2 lg:grid-cols-4 pb-4">
    <a href="/roll" class="xs:square"><img src="/assets/squared/roll-squared-01@2x.png" alt="Mock up of the original logo design for Roll by ADP"></a>
    <a href="/roll" class="xs:square"><img src="/assets/squared/roll-squared-02@2x.png" alt="Screenshot of VSCode showing the design tokens repository for Roll by ADP"></a>
    <a href="/roll" class="xs:square"><img src="/assets/squared/roll-squared-03@2x.png" alt="Screenshot of the payroll run conversation UI showcasing the components design and created for our clients"></a>
    <a href="/roll" class="xs:square"><img src="/assets/squared/roll-squared-04@2x.png" alt="Screenshots of the mobile app that would eventually be used circa 2018"></a>
  </main>
  <main class="grid gap-4 px-4 place-items-center xs:grid-cols-2 lg:grid-cols-4 pb-4">
    <a href="/njc" class="xs:square"><img src="/assets/squared/njc-squared-01@2x.png" alt="The logo mark for Noah James Curtis Stone Supply &amp; Tree Service"></a>
    <a href="/njc" class="xs:square"><img src="/assets/squared/njc-squared-02@2x.png" alt="The typeface and colors chosen for the branding of Noah James Curtis Stone Supply &amp; Tree Service"></a>
    <a href="/njc" class="xs:square"><img src="/assets/squared/njc-squared-03@2x.png" alt="Screenshot of the grid used for one of the Noah James Curtis Stone Supply logos with type"></a>
    <a href="/njc" class="xs:square"><img src="/assets/squared/njc-squared-04@2x.png" alt="One of the variations of the NJC Stone Supply &amp; Tree Service with logo mark and type logo"></a>
  </main>
    <Footer />
  </body>
</html>
