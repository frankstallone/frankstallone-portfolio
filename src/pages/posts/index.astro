---
import MainHead from '../../components/MainHead.astro';
import Footer from '../../components/Footer/index.astro';
import Header from '../../components/Header/index.astro';
const data = Astro.fetchContent('../posts/*.md');
---
<html lang="en" class="overflow-x-hidden">
  <head>
    <MainHead title="Blog: Frank Stallone III" desc="The amusing musements of Frank Stallone III" />
  </head>
  <body class="min-h-screen overflow-x-hidden relative" role="main">
    <Header />
    <article class="px-4 mb-12 text-bronze-bronze12 max-w-3xl mx-auto leading-relaxed">
        {data.map(post => (
                <div class="mt-6 pt-10 grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
                  <div>
                    <a href={post.url} class="">
                        <img src={post.hero} alt={post.alt} class="aspect-video">
                    </a>
                    <a href={post.url} class="mt-4 block">
                        <h2 class="font-display text-2xl text-amber-amber12 underline underline-offset-4 decoration-4 decoration-transparent hover:decoration-amber-amber12 hover:ease-in duration-300">
                            {post.title.toUpperCase()}
                        </h2>
                    <p class="text-sm text-golden-gold9 mt-2 text-right uppercase">
                        <time datetime={post.date}>{new Date(post.date).toLocaleDateString(undefined, { year: "numeric", month: "long", day: "numeric" })}</time>
                    </p>
                    <p class="mt-3 text-base text-gray-500">
                        {post.desc}
                    </p>
                    </a>
                    <div class="mt-3">
                    <a href={post.url} class="text-base font-semibold text-amber-amber11 hover:text-amber-amber12 hover:ease-in duration-300">
                        Read more &hellip;
                    </a>
                    </div>
                </div>
            </div>
        ))}
    </article>
    <Footer />
    <script type="module" src={Astro.resolve("../../scripts/navigation.ts")} />
  </body>
</html>